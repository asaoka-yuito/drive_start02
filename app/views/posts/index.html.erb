<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
	<div class="col-lg-10 offset-lg-1">
	  <form>
	    <%= render 'search_form', q: @q, url: posts_path %>
	  </form>
	</div>
  </div>
  <div class="row">
    <div class="col-12">
	  <div class="row">
	    <%# 掲示板一覧表示 %>
	    <% if @posts.present? %>
		  <%= render @posts %>
	    <% else %>
		  <p><%= t('.no_result') %></p>
	    <% end %>
	  </div>
    </div>
  </div>
  <%= paginate @posts %>
</div>